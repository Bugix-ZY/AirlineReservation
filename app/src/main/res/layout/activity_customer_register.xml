<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_customer_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="io.github.bugix_zy.airlinereservation.CustomerRegisterActivity">

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:layout_marginStart="297dp"
        android:textSize="30sp"
        android:layout_above="@+id/textView7"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="90dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:layout_marginStart="164dp"
        android:id="@+id/phoneEditText"
        android:layout_alignBottom="@+id/textView4"
        android:layout_toEndOf="@+id/textView4"
        android:textSize="24sp" />

    <TextView
        android:text="Account(Phone)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="37dp"
        android:id="@+id/textView4"
        android:textSize="30sp"
        android:layout_above="@+id/name"
        android:layout_alignEnd="@+id/name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/nameEditText"
        android:layout_alignBottom="@+id/name"
        android:layout_alignStart="@+id/phoneEditText"
        android:textSize="24sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/idcardEditText"
        android:layout_above="@+id/pswdEditText"
        android:layout_alignStart="@+id/nameEditText"
        android:layout_marginBottom="10dp"
        android:textSize="24sp" />

    <TextView
        android:text="passport No. / ID card No. "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textSize="30sp"
        android:layout_alignBaseline="@+id/idcardEditText"
        android:layout_alignBottom="@+id/idcardEditText"
        android:layout_alignEnd="@+id/name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:textSize="30sp"
        android:layout_marginBottom="260dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/textView5" />

    <TextView
        android:text="Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/pswdEditText"
        android:layout_toStartOf="@+id/textView7"
        android:id="@+id/textView9"
        android:textSize="30sp" />

    <Button
        android:text="Register"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:id="@+id/registerButton"
        android:textSize="30sp"
        android:onClick="onClickedRegisterButton"
        android:layout_marginBottom="61dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/backToLoginButton"
        android:layout_marginStart="121dp" />

    <Button
        android:text="@string/back"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:id="@+id/backToLoginButton"
        android:textSize="30sp"
        android:onClick="onClickedBackToLogin"
        android:layout_alignBaseline="@+id/registerButton"
        android:layout_alignBottom="@+id/registerButton"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginStart="70dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginTop="19dp"
        android:id="@+id/pswdEditText"
        android:lineSpacingExtra="24sp"
        android:layout_alignTop="@+id/textView7"
        android:layout_alignStart="@+id/idcardEditText"
        android:layout_alignEnd="@+id/idcardEditText" />
</RelativeLayout>
