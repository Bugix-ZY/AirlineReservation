<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_employee_add_spec"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="io.github.bugix_zy.airlinereservation.EmployeeAddSpecActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="FlightNo"
        android:ems="10"
        android:layout_marginStart="161dp"
        android:layout_marginTop="99dp"
        android:id="@+id/addSpecNoEdit"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Boarding Gate"
        android:ems="10"
        android:layout_below="@+id/addSpecMaxEdit"
        android:layout_alignStart="@+id/addSpecMaxEdit"
        android:layout_marginTop="58dp"
        android:id="@+id/addSpecGateEdit"
        android:textSize="24sp" />

    <Button
        android:text="BACK"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:id="@+id/AddSpecBackButton"
        android:textSize="30sp"
        android:onClick="onClickedAddSpecBack"
        android:layout_marginBottom="65dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/addSpecButton"
        android:layout_marginStart="134dp" />

    <Button
        android:text="ADD"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:id="@+id/addSpecButton"
        android:textSize="30sp"
        android:layout_marginStart="213dp"
        android:layout_alignBaseline="@+id/AddSpecBackButton"
        android:layout_alignBottom="@+id/AddSpecBackButton"
        android:layout_alignStart="@+id/addSpecGateEdit"
        android:onClick="onClickedAddSpec" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Date"
        android:ems="10"
        android:layout_marginTop="40dp"
        android:id="@+id/addSpecDateEdit"
        android:textSize="24sp"
        android:layout_below="@+id/addSpecNoEdit"
        android:layout_alignStart="@+id/addSpecNoEdit" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Max Capacity"
        android:ems="10"
        android:layout_marginTop="41dp"
        android:id="@+id/addSpecMaxEdit"
        android:textSize="24sp"
        android:layout_below="@+id/addSpecDateEdit"
        android:layout_alignStart="@+id/addSpecDateEdit" />
</RelativeLayout>
