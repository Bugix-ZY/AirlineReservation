<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_employee_delete_spec"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="io.github.bugix_zy.airlinereservation.EmployeeDeleteSpecActivity">

    <TextView
        android:text="Flight No."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="224dp"
        android:layout_marginTop="125dp"
        android:id="@+id/textView15"
        android:textSize="30sp" />

    <TextView
        android:text="Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="86dp"
        android:id="@+id/textView16"
        android:textSize="30sp"
        android:layout_below="@+id/textView15"
        android:layout_alignStart="@+id/textView15" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginStart="156dp"
        android:id="@+id/deleteSpecNoEdit"
        android:textSize="30sp"
        android:layout_alignBaseline="@+id/textView15"
        android:layout_alignBottom="@+id/textView15"
        android:layout_toEndOf="@+id/textView15" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/deleteSpecDateEdit"
        android:textSize="30sp"
        android:layout_alignTop="@+id/textView16"
        android:layout_alignStart="@+id/deleteSpecNoEdit" />

    <Button
        android:text="@string/back"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/textView15"
        android:layout_marginStart="26dp"
        android:layout_marginBottom="99dp"
        android:id="@+id/deleteSpecBack"
        android:onClick="onClickedDeleteSpecBack"
        android:textSize="30sp" />

    <Button
        android:text="Delete"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/deleteSpecBack"
        android:layout_alignEnd="@+id/deleteSpecDateEdit"
        android:layout_marginEnd="102dp"
        android:id="@+id/deleteSpecButton"
        android:textSize="30sp"
        android:onClick="onClickedDeleteSpecButton" />
</RelativeLayout>
