<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.github.bugix_zy.airlinereservation">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".CustomerQueryActivity" />
        <activity android:name=".CustomerMenuActivity" />
        <activity android:name=".CustomerQueryResultActivity" />
        <activity android:name=".CustomerLoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CustomerRegisterActivity" />
        <activity android:name=".CustomerBookingActivity" />
        <activity android:name=".CustomerManagementActivity" />
        <activity android:name=".CustomerCancelActivity" />
        <activity android:name=".EmployeeAddRegActivity" />
        <activity android:name=".EmployeeMenuActivity">
        </activity>
        <activity android:name=".EmployeeShowRegActivity" />
        <activity android:name=".EmployeeAddSpecActivity" />
        <activity android:name=".EmployeeShowAllSpecActivity" />
        <activity android:name=".EmployeeDeleteRegActivity" />
        <activity android:name=".EmployeeDeleteSpecActivity"></activity>
    </application>

</manifest>